<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Zero Property Adventure!</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/canvas-confetti/1.6.0/confetti.browser.min.js"></script>
    <style>
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }
        .game-container {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            text-align: center;
            max-width: 600px;
            width: 90%;
        }
        h1 {
            color: #4a4a4a;
            font-size: 2.5em;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .problem {
            font-size: 2em;
            margin: 20px 0;
            color: #2c3e50;
        }
        .input-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
        }
        input {
            width: 60px;
            height: 60px;
            font-size: 24px;
            text-align: center;
            border: 3px solid #3498db;
            border-radius: 10px;
            outline: none;
        }
        input:focus {
            border-color: #2980b9;
            box-shadow: 0 0 10px rgba(52, 152, 219, 0.5);
        }
        button {
            background-color: #2ecc71;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.2em;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.1s, background-color 0.3s;
            margin: 10px;
        }
        button:hover:not(:disabled) {
            background-color: #27ae60;
            transform: scale(1.05);
        }
        button:active:not(:disabled) {
            transform: scale(0.95);
        }
        button:disabled {
            background-color: #bdc3c7;
            cursor: not-allowed;
            transform: none;
        }
        .hint-button {
            background-color: #e67e22;
        }
        .hint-button:hover:not(:disabled) {
            background-color: #d35400;
        }
        .hint-panel {
            display: none;
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            font-size: 1.2em;
        }
        .score {
            font-size: 1.5em;
            color: #8e44ad;
            margin: 20px 0;
        }
        .correct {
            animation: bounce 0.5s;
            color: #27ae60;
        }
        .wrong {
            animation: shake 0.5s;
            color: #c0392b;
        }
        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }
        .feedback {
            font-size: 1.5em;
            margin: 20px 0;
            min-height: 40px;
        }
        .star {
            display: inline-block;
            color: gold;
            font-size: 2em;
            margin: 0 5px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="game-container">
        <h1>Zero Property Adventure! <span class="star">‚≠ê</span></h1>
        <div class="score">Score: <span id="score">0</span></div>
        <div class="problem" id="problem"></div>
        <div class="input-container">
            <input type="number" id="answer1" placeholder="?">
            <input type="number" id="answer2" placeholder="?">
        </div>
        <div style="display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
            <button onclick="previousQuestion()" id="prevBtn" style="background-color: #3498db;">‚Üê Previous</button>
            <button onclick="checkAnswer()" id="checkBtn">Check Answer!</button>
            <button onclick="nextQuestion()" id="nextBtn" style="background-color: #3498db;">Next ‚Üí</button>
        </div>
        <button class="hint-button" onclick="toggleHint()">Need a Hint?</button>
        <div class="hint-panel" id="hintPanel"></div>
        <div class="feedback" id="feedback"></div>
    </div>

    <script>
        let score = 0;
        let problemHistory = [];
        let currentProblemIndex = -1;
        
        const problems = [
            {
                expression: '(x + 2)(x - 3) = 0',
                variable: 'x',
                answers: [-2, 3],
                hint: 'This problem uses the English letter "x"'
            },
            {
                expression: '(Œ± + 1)(Œ± - 4) = 0',
                variable: 'Œ±',
                answers: [-1, 4],
                hint: 'This problem uses the Greek letter "alpha" (Œ±)'
            },
            {
                expression: '(Œ≤ - 2)(Œ≤ + 5) = 0',
                variable: 'Œ≤',
                answers: [2, -5],
                hint: 'This problem uses the Greek letter "beta" (Œ≤)'
            },
            {
                expression: '(Œ∏ + 3)(Œ∏ - 1) = 0',
                variable: 'Œ∏',
                answers: [-3, 1],
                hint: 'This problem uses the Greek letter "theta" (Œ∏)'
            },
            {
                expression: '(œà - 5)(œà + 2) = 0',
                variable: 'œà',
                answers: [5, -2],
                hint: 'This problem uses the Greek letter "psi" (œà)'
            },
            {
                expression: '(œÄ + 4)(œÄ - 2) = 0',
                variable: 'œÄ',
                answers: [-4, 2],
                hint: 'This problem uses the Greek letter "pi" (œÄ)'
            },

            {
                expression: '(x + 2)(x - 3) = 0',
                variable: 'x',
                answers: [-2, 3],
                hint: 'This uses the English letter "x"',
                info: 'In English, we often use "x" in math problems!'
            },
            // Greek alphabet
            {
                expression: '(Œ± + 1)(Œ± - 4) = 0',
                variable: 'Œ± (alpha)',
                answers: [-1, 4],
                hint: 'This uses the Greek letter "alpha" (Œ±)',
                info: 'Alpha (Œ±) is the first letter of the Greek alphabet!'
            },
            // Japanese Hiragana
            {
                expression: '(„ÅÇ + 3)(„ÅÇ - 2) = 0',
                variable: '„ÅÇ (a)',
                answers: [-3, 2],
                hint: 'This uses the Japanese hiragana "a" („ÅÇ)',
                info: '„ÅÇ (a) is the first letter in the Japanese hiragana alphabet!'
            },
            // Chinese
            {
                expression: '(Êï∞ + 5)(Êï∞ - 1) = 0',
                variable: 'Êï∞ (sh√π)',
                answers: [-5, 1],
                hint: 'This uses the Chinese character for "number" (Êï∞)',
                info: 'Êï∞ (sh√π) means "number" in Chinese!'
            },
            // Korean Hangul
            {
                expression: '(Í∞Ä + 2)(Í∞Ä - 4) = 0',
                variable: 'Í∞Ä (ga)',
                answers: [-2, 4],
                hint: 'This uses the Korean letter "ga" (Í∞Ä)',
                info: 'Í∞Ä (ga) is the first letter in the Korean alphabet!'
            },
            // Arabic
            {
                expression: '(ÿ≥ + 4)(ÿ≥ - 3) = 0',
                variable: 'ÿ≥ (seen)',
                answers: [-4, 3],
                hint: 'This uses the Arabic letter "seen" (ÿ≥)',
                info: 'ÿ≥ (seen) is often used in Arabic mathematics!'
            },
            // Hebrew
            {
                expression: '(◊ê + 6)(◊ê - 2) = 0',
                variable: '◊ê (alef)',
                answers: [-6, 2],
                hint: 'This uses the Hebrew letter "alef" (◊ê)',
                info: '◊ê (alef) is the first letter of the Hebrew alphabet!'
            },
            // Russian Cyrillic
            {
                expression: '(—è + 3)(—è - 5) = 0',
                variable: '—è (ya)',
                answers: [-3, 5],
                hint: 'This uses the Russian letter "ya" (—è)',
                info: '—è (ya) is the last letter in the Russian alphabet!'
            }


        ];

        function getRandomProblem() {
            const unusedProblems = problems.filter(p => 
                !problemHistory.some(hp => hp.expression === p.expression)
            );
            if (unusedProblems.length === 0) {
                return problems[Math.floor(Math.random() * problems.length)];
            }
            return unusedProblems[Math.floor(Math.random() * unusedProblems.length)];
        }

        function displayProblem(problem) {
            document.getElementById('problem').textContent = problem.expression;
            document.getElementById('answer1').value = '';
            document.getElementById('answer2').value = '';
            document.getElementById('feedback').textContent = '';
            document.getElementById('hintPanel').style.display = 'none';
            
            document.getElementById('prevBtn').disabled = currentProblemIndex <= 0;
            document.getElementById('nextBtn').disabled = false;

            // Enable inputs and check button
            document.getElementById('checkBtn').disabled = false;
            document.getElementById('answer1').disabled = false;
            document.getElementById('answer2').disabled = false;
        }

        function nextQuestion() {
            if (currentProblemIndex < problemHistory.length - 1) {
                currentProblemIndex++;
                displayProblem(problemHistory[currentProblemIndex]);
            } else {
                const newProblem = getRandomProblem();
                problemHistory.push(newProblem);
                currentProblemIndex = problemHistory.length - 1;
                displayProblem(newProblem);
            }
        }

        function previousQuestion() {
            if (currentProblemIndex > 0) {
                currentProblemIndex--;
                displayProblem(problemHistory[currentProblemIndex]);
            }
        }

        function toggleHint() {
            const hintPanel = document.getElementById('hintPanel');
            if (hintPanel.style.display === 'none') {
                hintPanel.style.display = 'block';
                hintPanel.textContent = problemHistory[currentProblemIndex].hint;
            } else {
                hintPanel.style.display = 'none';
            }
        }

        function celebrateSuccess() {
            // Initial burst
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 },
                colors: ['#FFD700', '#FFA500', '#FF69B4', '#00FF00', '#4169E1']
            });

            // Left side burst
            setTimeout(() => {
                confetti({
                    particleCount: 50,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0 },
                    colors: ['#FFD700', '#FFA500', '#FF69B4', '#00FF00', '#4169E1']
                });
            }, 250);

            // Right side burst
            setTimeout(() => {
                confetti({
                    particleCount: 50,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1 },
                    colors: ['#FFD700', '#FFA500', '#FF69B4', '#00FF00', '#4169E1']
                });
            }, 400);

            // Final burst
            setTimeout(() => {
                confetti({
                    particleCount: 75,
                    spread: 360,
                    origin: { y: 0.65 },
                    colors: ['#FFD700', '#FFA500', '#FF69B4', '#00FF00', '#4169E1']
                });
            }, 650);
        }

        function checkAnswer() {
            const answer1 = parseFloat(document.getElementById('answer1').value);
            const answer2 = parseFloat(document.getElementById('answer2').value);
            const feedback = document.getElementById('feedback');
            const currentProblem = problemHistory[currentProblemIndex];
            
            if (isNaN(answer1) || isNaN(answer2)) {
                feedback.textContent = "Please enter both numbers!";
                feedback.className = "feedback wrong";
                return;
            }

            const correctAnswers = currentProblem.answers;
            const isCorrect = (
                (answer1 === correctAnswers[0] && answer2 === correctAnswers[1]) ||
                (answer1 === correctAnswers[1] && answer2 === correctAnswers[0])
            );

            if (isCorrect) {
                score += 10;
                document.getElementById('score').textContent = score;

                const messages = [
                    "üéâ Amazing! You found both numbers! üéâ",
                    "üåü Brilliant work! Keep it up! üåü",
                    "‚ú® Outstanding! You're a math wizard! ‚ú®",
                    "üéØ Perfect! You're doing great! üéØ",
                    "üèÜ Excellent! You're on fire! üèÜ"
                ];
                
                const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                feedback.textContent = randomMessage;
                feedback.className = "feedback correct";
                
                // Disable inputs and check button
                const checkBtn = document.getElementById('checkBtn');
                const answer1Input = document.getElementById('answer1');
                const answer2Input = document.getElementById('answer2');
                
                checkBtn.disabled = true;
                answer1Input.disabled = true;
                answer2Input.disabled = true;
                
                celebrateSuccess();
                
                // Auto-progress after delay
                setTimeout(() => {
                    if (currentProblemIndex < problemHistory.length - 1) {
                        currentProblemIndex++;
                        displayProblem(problemHistory[currentProblemIndex]);
                    } else {
                        const newProblem = getRandomProblem();
                        problemHistory.push(newProblem);
                        currentProblemIndex = problemHistory.length - 1;
                        displayProblem(newProblem);
                    }
                }, 2000);
            } else {
                feedback.textContent = "Not quite! Try again! ü§î";
                feedback.className = "feedback wrong";
                
                const inputs = [document.getElementById('answer1'), document.getElementById('answer2')];
                inputs.forEach(input => {
                    input.classList.add('wrong');
                    setTimeout(() => input.classList.remove('wrong'), 500);
                });
            }
        }

        // Initialize game
        nextQuestion();

        // Add keyboard support
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !document.getElementById('checkBtn').disabled) {
                checkAnswer();
            } else if (e.key === 'ArrowRight' && !document.getElementById('nextBtn').disabled) {
                nextQuestion();
            } else if (e.key === 'ArrowLeft' && !document.getElementById('prevBtn').disabled) {
                previousQuestion();
            }
        });
    </script>
</body>
</html>