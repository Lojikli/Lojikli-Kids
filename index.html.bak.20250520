// Simplified direct DOM manipulation version of setupCategoryFiltering
function setupCategoryFiltering() {
    debug("Setting up category filtering...");
    
    const categories = document.querySelectorAll('.category');
    if (!categories || categories.length === 0) {
        debug("ERROR: Could not find category elements!");
        return;
    }
    
    categories.forEach(category => {
        category.addEventListener('click', () => {
            debug("Category clicked: " + category.textContent);
            
            // Update active state
            categories.forEach(cat => cat.classList.remove('active'));
            category.classList.add('active');
            
            const selectedCategory = category.dataset.category;
            debug("Selected category: " + selectedCategory);
            
            // Get all app cards
            const appCards = document.querySelectorAll('.app-card');
            
            // Filter cards based on category
            appCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                
                if (selectedCategory === 'all' || cardCategory === selectedCategory) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });
    
    debug("Category filtering setup complete!");
}

// Simplified direct DOM manipulation version of setupSearch
function setupSearch() {
    debug("Setting up search functionality...");
    
    const searchBox = document.getElementById('searchBox');
    if (!searchBox) {
        debug("ERROR: Could not find searchBox element!");
        return;
    }
    
    searchBox.addEventListener('input', () => {
        const searchTerm = searchBox.value.toLowerCase();
        debug("Search term: " + searchTerm);
        
        // Get all app cards
        const appCards = document.querySelectorAll('.app-card');
        
        // Filter cards based on search term
        appCards.forEach(card => {
            const appName = card.querySelector('.app-name').textContent.toLowerCase();
            
            if (appName.includes(searchTerm)) {
                card.style.display = 'flex';
            } else {
                card.style.display = 'none';
            }
        });
    });
    
    debug("Search functionality setup complete!");
}

// Initialize everything when the document is loaded
document.addEventListener('DOMContentLoaded', function() {
    debug("DOM content loaded, initializing application...");
    
    // Create app cards first (most important)
    createAppCards();
    
    // Then populate recent games
    populateRecentGames();
    
    // Set up filtering and search after content is created
    setupCategoryFiltering();
    setupSearch();
    
    debug("Application initialization complete!");
});
