// Simplified direct DOM manipulation version of createAppCards
function createAppCards() {
    debug("Creating app cards...");
    
    const toddlerGrid = document.getElementById('toddlerGrid');
    const elementaryGrid = document.getElementById('elementaryGrid');
    
    if (!toddlerGrid || !elementaryGrid) {
        debug("ERROR: Could not find toddlerGrid or elementaryGrid elements!");
        return;
    }
    
    // Clear existing content
    toddlerGrid.innerHTML = '';
    elementaryGrid.innerHTML = '';
    
    debug("Processing toddler apps: " + repository["2 yr old"].length);
    
    // Directly add toddler apps
    repository["2 yr old"].forEach(filename => {
        // Create a nice name (remove html extension and capitalize)
        let name = filename.replace(".html", "").replace(/v\d+(\.\d+)?/ig, "").replace(/V\d+(\.\d+)?/ig, "");
        name = name.replace(/[-_.]/g, " ");
        name = name.split(" ").map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(" ").trim();
        
        // Determine category and icon class
        let category = "language";
        let iconClass = "fas fa-book";
        
        if (filename.toLowerCase().includes("read") || filename.toLowerCase().includes("writing")) {
            category = "language";
            iconClass = "fas fa-book";
        }
        
        // Create card HTML - note data-category attribute added
        const cardHTML = `
            <a href="2 yr old/${filename}" class="app-card" data-category="${category}">
                <div class="app-icon">
                    <i class="${iconClass}"></i>
                </div>
                <div class="app-info">
                    <div class="app-name">${name}</div>
                    <div class="app-category">For Ages 2-4</div>
                </div>
            </a>
        `;
        
        // Add to grid
        toddlerGrid.innerHTML += cardHTML;
    });
    
    debug("Processing elementary apps: " + repository["5 yr old"].length);
    
    // Directly add elementary apps
    repository["5 yr old"].forEach(filename => {
        // Create a nice name (remove html extension and capitalize)
        let name = filename.replace(".html", "").replace(/v\d+(\.\d+)?/ig, "").replace(/V\d+(\.\d+)?/ig, "");
        name = name.replace(/[-_.]/g, " ");
        name = name.split(" ").map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(" ").trim();
        
        // Determine icon class and category
        let iconClass = "fas fa-puzzle-piece";
        let category = "games";
        
        if (filename.toLowerCase().includes("math") || 
            filename.toLowerCase().includes("fraction") || 
            filename.toLowerCase().includes("algebra") ||
            filename.toLowerCase().includes("calculus") ||
            filename.toLowerCase().includes("factor") ||
            filename.toLowerCase().includes("equation") ||
            filename.toLowerCase().includes("pemdas") ||
            filename.toLowerCase().includes("division") ||
            filename.toLowerCase().includes("multiply")) {
            iconClass = "fas fa-calculator";
            category = "math";
        } else if (filename.toLowerCase().includes("music") || 
                 filename.toLowerCase().includes("piano") ||
                 filename.toLowerCase().includes("midi") ||
                 filename.toLowerCase().includes("note")) {
            iconClass = "fas fa-music";
            category = "music";
        } else if (filename.toLowerCase().includes("geo") || 
                 filename.toLowerCase().includes("globe") ||
                 filename.toLowerCase().includes("country")) {
            iconClass = "fas fa-globe-americas";
            category = "geography";
        } else if (filename.toLowerCase().includes("read") || 
                 filename.toLowerCase().includes("writing") ||
                 filename.toLowerCase().includes("word")) {
            iconClass = "fas fa-book";
            category = "language";
        } else if (filename.toLowerCase().includes("element") || 
                  filename.toLowerCase().includes("genetic") ||
                  filename.toLowerCase().includes("space")) {
            iconClass = "fas fa-flask";
            category = "science";
        } else if (filename.toLowerCase().includes("neural") || 
                  filename.toLowerCase().includes("ai") ||
                  filename.toLowerCase().includes("tech")) {
            iconClass = "fas fa-microchip";
            category = "technology";
        } else if (filename.toLowerCase().includes("game") ||
                  filename.toLowerCase().includes("battle") ||
                  filename.toLowerCase().includes("pacman") ||
                  filename.toLowerCase().includes("snake") ||
                  filename.toLowerCase().includes("puzzle")) {
            iconClass = "fas fa-gamepad";
            category = "games";
